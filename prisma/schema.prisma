// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id              Int      @id @default(autoincrement())
    email           String   @unique
    password        String
    phoneNumber     String   @unique
    firstName       String
    lastName        String
    additionalEmail String?  @unique
    middleName      String?
    arabicFullName  String?
    appointlet      String?
    bio             String?
    gsLevel         GsLevel  @default(COORDINATOR)
    status          Status   @default(ACTIVE)
    joinDate        DateTime @default(now())
    squads          Squad[]
}

model Squad {
    id    Int    @id @default(autoincrement())
    name  String
    users User[]
}

enum GsLevel {
    INTERN
    COORDINATOR
    SPECIALIST
    VETERAN
    REPRESENTATIVE
    ORCHESTRATOR
}

enum Status {
    ACTIVE
    FREEZE
    LEFT
}
