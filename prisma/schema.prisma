generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  squad Squad? @relation(fields: [squad_id], references: [id])
  squad_id Int?

  @@index([squad_id])
}

model Squad {
    id Int @default(autoincrement()) @id
    name String
    members User[]
}

model User {
    id       Int    @id @default(autoincrement())
    username String @unique
}
